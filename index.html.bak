    <!-- JAVASCRIPT LOGIC -->
    <script>
        // DATA
        const projects = [
            {
                id: 'med-app',
                title: 'Dr. Consult',
                category: 'Mobile Product UI',
                image: 'https://picsum.photos/800/600?random=1',
                problem: 'Complex scheduling flow caused 40% drop-off.',
                outcome: '+22% Booking Conversion',
                role: 'UI/UX Design',
                timeline: '8 Weeks',
                description: 'Dr. Consult is a telemedicine platform connecting patients with specialists. We streamlined the booking flow and improved accessibility for elderly users.',
                challenge: 'The primary challenge was reducing the cognitive load for elderly patients while gathering necessary medical history.',
                approach: 'We audited the existing flow, removed 30% of non-essential fields, and introduced a "one-thing-per-page" wizard pattern.',
                stack: ['Figma', 'React Native', 'Segment'],
                gallery: ['https://picsum.photos/800/600?random=11', 'https://picsum.photos/800/600?random=12']
            },
            {
                id: 'emb-gui',
                title: 'Industrial Controller',
                category: 'Embedded GUI (LVGL)',
                image: 'https://picsum.photos/800/600?random=2',
                problem: 'Operator error due to poor contrast.',
                outcome: 'Zero critical safety errors',
                role: 'Embedded UI & C',
                timeline: '12 Weeks',
                description: 'We designed and implemented the HMI for a heavy machinery control panel using LVGL, optimized for a 480x272px resistive touch screen.',
                challenge: 'Working with low memory (256KB RAM) meant we had to avoid large bitmaps and rely on vector-like drawing operations within LVGL.',
                approach: 'We created a high-contrast safety color system and a modular UI component set in C used across the entire machine family.',
                stack: ['LVGL', 'C++', 'SquareLine Studio'],
                gallery: ['https://picsum.photos/800/600?random=21', 'https://picsum.photos/800/600?random=22']
            },
            {
                id: 'brand',
                title: 'AeroDynamics',
                category: 'Brand Identity',
                image: 'https://picsum.photos/800/600?random=3',
                problem: 'Legacy brand looked outdated.',
                outcome: 'Successful $12M raise',
                role: 'Brand Identity',
                timeline: '6 Weeks',
                description: 'AeroDynamics is an AI-driven logistics optimization platform. We created a visual language based on fluid dynamics data visualizations.',
                challenge: 'The client needed a look that was "mathematical yet organic" to represent their AI algorithms.',
                approach: 'We generated visual patterns based on actual fluid dynamics simulations. This data-driven art direction became the core of the brand.',
                stack: ['Illustrator', 'Cinema 4D', 'WebGL'],
                gallery: ['https://picsum.photos/800/600?random=31', 'https://picsum.photos/800/600?random=32']
            }
        ];

        // INIT
        document.addEventListener('DOMContentLoaded', () => {
            lucide.createIcons();
            renderProjects();
            setupObserver();
        });

        // NAVBAR SCROLL
        window.addEventListener('scroll', () => {
            const nav = document.getElementById('navbar');
            if (window.scrollY > 50) {
                nav.classList.add('bg-naxit-bg/80', 'backdrop-blur-md', 'border-b', 'border-white/5', 'py-4');
                nav.classList.remove('py-6');
            } else {
                nav.classList.remove('bg-naxit-bg/80', 'backdrop-blur-md', 'border-b', 'border-white/5', 'py-4');
                nav.classList.add('py-6');
            }
        });

        // MOBILE MENU
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            if (menu.classList.contains('hidden')) {
                menu.classList.remove('hidden');
                setTimeout(() => menu.classList.remove('opacity-0'), 10);
                document.body.style.overflow = 'hidden';
            } else {
                menu.classList.add('opacity-0');
                setTimeout(() => menu.classList.add('hidden'), 300);
                document.body.style.overflow = 'auto';
            }
        }

        // RENDER PROJECTS
        function renderProjects() {
            const grid = document.getElementById('projects-grid');
            grid.innerHTML = projects.map((p, index) => `
                <div class="glass-panel p-0 rounded-2xl border border-white/5 overflow-hidden group cursor-pointer hover:border-naxit-violet/50 transition-all duration-300 reveal stagger-${(index % 3) + 1}" onclick="openProject('${p.id}')">
                    <div class="relative h-64 overflow-hidden">
                        <div class="absolute inset-0 bg-gradient-to-t from-naxit-bg via-transparent to-transparent opacity-80 z-10"></div>
                        <img src="${p.image}" alt="${p.title}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700">
                        <div class="absolute top-4 left-4 z-20 bg-black/50 backdrop-blur-md px-3 py-1 rounded-full text-xs border border-white/10 text-white">${p.category}</div>
                    </div>
                    <div class="p-6 relative z-20 -mt-12">
                        <h3 class="text-2xl font-bold font-display mb-4 text-white group-hover:text-naxit-cyan transition-colors">${p.title}</h3>
                        <div class="space-y-4 text-sm text-gray-400">
                            <div><strong class="block text-naxit-muted text-xs uppercase tracking-wide mb-1">Problem</strong>${p.problem}</div>
                            <div><strong class="block text-naxit-muted text-xs uppercase tracking-wide mb-1">Outcome</strong><span class="text-naxit-primary font-semibold">${p.outcome}</span></div>
                        </div>
                        <div class="pt-4 flex items-center text-naxit-cyan text-xs font-bold uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity transform translate-y-2 group-hover:translate-y-0 duration-300">
                            View Case Study <i data-lucide="arrow-up-right" class="w-3 h-3 ml-1"></i>
                        </div>
                    </div>
                </div>
            `).join('');
            lucide.createIcons(); // Re-init icons for new content
        }

        // NAVIGATION LOGIC
        function openProject(id) {
            const project = projects.find(p => p.id === id);
            if(!project) return;

            const content = document.getElementById('project-content-area');
            
            // Build the HTML for details
            let galleryHTML = project.gallery.map(img => `
                <div class="rounded-xl overflow-hidden border border-white/10 shadow-lg group"><img src="${img}" class="w-full h-64 object-cover hover:scale-105 transition-transform duration-500"></div>
            `).join('');

            let stackHTML = project.stack.map(s => `<span class="px-3 py-1 rounded-full bg-white/5 text-sm text-gray-300 border border-white/5">${s}</span>`).join('');

            content.innerHTML = `
                <div class="grid lg:grid-cols-2 gap-12 mb-16 animate-fade-in-up">
                    <div class="space-y-6">
                        <div class="inline-block px-3 py-1 rounded-full bg-naxit-violet/10 border border-naxit-violet/30 text-naxit-violet text-sm font-semibold">${project.category}</div>
                        <h1 class="font-display text-4xl lg:text-5xl font-bold leading-tight">${project.title}</h1>
                        <p class="text-xl text-naxit-muted leading-relaxed">${project.description}</p>
                        <div class="flex flex-wrap gap-4 pt-4">
                           <div class="p-4 rounded-xl bg-white/5 border border-white/5 flex-1 min-w-[140px]">
                              <div class="text-naxit-muted text-xs uppercase tracking-wider mb-2 flex items-center gap-2"><i data-lucide="layers" class="w-3 h-3"></i> Role</div>
                              <div class="font-semibold text-white">${project.role}</div>
                           </div>
                           <div class="p-4 rounded-xl bg-white/5 border border-white/5 flex-1 min-w-[140px]">
                              <div class="text-naxit-muted text-xs uppercase tracking-wider mb-2 flex items-center gap-2"><i data-lucide="calendar" class="w-3 h-3"></i> Timeline</div>
                              <div class="font-semibold text-white">${project.timeline}</div>
                           </div>
                        </div>
                    </div>
                    <div class="relative rounded-2xl overflow-hidden border border-white/10 shadow-2xl">
                        <img src="${project.image}" class="w-full h-full object-cover">
                    </div>
                </div>
                <div class="grid lg:grid-cols-12 gap-12">
                    <div class="lg:col-span-8 space-y-12">
                        <section><h3 class="font-display text-2xl font-bold mb-4 flex items-center gap-3"><span class="w-8 h-1 bg-red-500 rounded-full"></span>The Challenge</h3><p class="text-naxit-text/80 leading-relaxed text-lg">${project.challenge}</p></section>
                        <section><h3 class="font-display text-2xl font-bold mb-4 flex items-center gap-3"><span class="w-8 h-1 bg-naxit-cyan rounded-full"></span>Our Approach</h3><p class="text-naxit-text/80 leading-relaxed text-lg">${project.approach}</p></section>
                        <section><h3 class="font-display text-2xl font-bold mb-6">Visuals</h3><div class="grid md:grid-cols-2 gap-6">${galleryHTML}</div></section>
                    </div>
                    <div class="lg:col-span-4 space-y-8">
                         <div class="p-6 rounded-2xl bg-naxit-card border border-white/5">
                            <h4 class="font-bold mb-4 flex items-center gap-2"><i data-lucide="code" class="w-4 h-4 text-naxit-primary"></i> Tech Stack</h4>
                            <div class="flex flex-wrap gap-2">${stackHTML}</div>
                         </div>
                         <div class="p-6 rounded-2xl bg-gradient-to-br from-naxit-violet/10 to-naxit-primary/5 border border-naxit-violet/20">
                            <h4 class="font-bold mb-2 text-white">The Outcome</h4>
                            <div class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-naxit-violet to-naxit-cyan mb-2">${project.outcome}</div>
                         </div>
                         <div class="text-center p-6"><button onclick="scrollToContact()" class="w-full px-6 py-3 rounded-xl bg-cta-gradient font-bold text-white">Start a Conversation</button></div>
                    </div>
                </div>
            `;
            
            // Switch views
            document.getElementById('home-view').classList.add('hidden');
            document.getElementById('project-view').classList.remove('hidden');
            window.scrollTo(0,0);
            lucide.createIcons();
        }

        function showHome() {
            document.getElementById('project-view').classList.add('hidden');
            document.getElementById('home-view').classList.remove('hidden');
            window.scrollTo(0,0);
        }

        function scrollToContact() {
            showHome();
            setTimeout(() => {
                document.getElementById('contact').scrollIntoView({behavior: 'smooth'});
            }, 100);
        }

        // FORM HANDLING
        function handleFormSubmit(e) {
            e.preventDefault();
            document.getElementById('contact-form-container').classList.add('hidden');
            document.getElementById('contact-success').classList.remove('hidden');
        }

        function resetForm() {
            document.getElementById('contact-success').classList.add('hidden');
            document.getElementById('contact-form-container').classList.remove('hidden');
            document.querySelector('form').reset();
        }

        // SCROLL REVEAL ANIMATIONS
        function setupObserver() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('active');
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
        }

    </script>
<script type="module" src="/index.tsx"></script>
